<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.detail.DetailFragment">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:src="@tools:sample/avatars"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_name"
                style="@style/TextAppearance.Bengkelin.h6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Bengkel bang jono bin jono bin titan bin thanos bin alpenliebe"/>

            <TextView
                android:id="@+id/tv_address"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="Jl. yang kita lalui bersama dengan si dia RT. 03 RW. 01"/>

        </LinearLayout>

        <include
            android:id="@+id/layout_information"
            layout="@layout/layout_bengkel_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="16dp"
            app:dividerColor="@color/light_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_titleType"
                style="@style/TextAppearance.Bengkelin.h6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/choose_vehicle"/>

            <Button
                android:id="@+id/btn_typeBike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_titleType"
                android:text="Motor"/>

            <Button
                android:id="@+id/btn_typeCar"
                style="@style/Button.Bengkelin.Outlined.Gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_titleType"
                android:layout_toEndOf="@id/btn_typeBike"
                android:layout_marginStart="8dp"
                android:text="Mobil"/>
        </RelativeLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="12dp"
            app:dividerColor="@color/light_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/TextAppearance.Bengkelin.h6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_services" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>