<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bengkelin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/slightly_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.ActionBar</item>
        <item name="textAppearanceButton">@style/TextAppearance.Bengkelin.Button</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Bengkelin.h4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Bengkelin.h5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Bengkelin.h6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Bengkelin.Button" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Bengkelin.Outlined.Gray" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="strokeColor">@color/dark_gray</item>
    </style>

    <style name="Button.Bengkelin.Gray" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="Button.Bengkelin.Outlined.Blue" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/blue</item>
        <item name="strokeColor">@color/blue</item>
    </style>

    <style name="roundedCornerSmall">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="roundedCornerMedium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="RadioButton">
        <item name="android:background">@drawable/custom_radio_button</item>
        <item name="android:button">@null</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/custom_radio_button</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>